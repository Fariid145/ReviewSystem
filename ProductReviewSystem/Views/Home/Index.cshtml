
@model IEnumerable<ProductReviewSystem.Models.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Fariid Express</h1>
    <br/>
    <h3>Our Products:</h3><br/>
    <div class="row mb-5">
        @foreach(var product in Model)
        {
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="card">
                    <h4 class="card-header font-weight-bold text-center">
                        @product.Name
                    </h4>
                    <div class="card-body">
                        <a class="font-weight-bold">Manufacturer: </a>@product.UserName<br>
                        <a class="font-weight-bold">Description: </a>@product.Description<br>
                        <a class="font-weight-bold">Ratings: </a>@product.AverageRating<br><br>
                        
                    </div>
                    <div class="card-footer">
                        <a class="text-center btn btn-outline-primary" asp-action="Detail" asp-route-id="@product.Id">Show Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
